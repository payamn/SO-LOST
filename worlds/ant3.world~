# Ant world

include "pioneer.inc"
include "map.inc"

interval_sim 20
#speedup 100
paused 1

# time at which to pause (in GUI mode) or quit (in headless mode) the simulation
#quit_time 3600 # 1 hour of simulated time

resolution 0.02

threads 2

# configure the GUI window
window
(
  size [ 1855 1028 ]

  center [ 1.852 -0.325 ]
  rotate [ 4.500 1.000 ]
  scale 27.759

  show_data 1
  show_flags 1

  #interval 10
)

# load an environment bitmap
floorplan
(
  name "cave"
  pose [0.000 0.000 0.000 0.000]
  size [64.000 32.000 0.600]
  bitmap "bitmaps/caveMirrormain.png"
)

define home zone
(
  color "brown"
  name "home"
  fiducial_return 31

  #ctrl "sink"
)



define food zone
(
  fiducial_return 32
  color "blue"
  #ctrl "../build/antbot"
)

define antbot pioneer2dx
(
 fiducial
  (
    range_min 0.0
    range_max 3.0
    range_max_id 3.0
    # TODO(jacobperron): fov property is buggy
    #fov 1.57
    # TODO(jacobperron): bug when ignore_zloc = 1 and obstacle is behind object, then no detection (model_fiducial.cc line 185)
    ignore_zloc 0
    size [0.100 0.100 0.100]
    pose [0.000 0.000 -0.210 0.000]
  )
  fiducial_retu4rn 0

  ctrl "../build/antbot"
)




# Spawn AntBot's home
home
(
  size [ 2.000 2.000 0.030 ]
  pose [ -25.484 -10.434 0.000 0.000 ]
)

